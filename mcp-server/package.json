{
  "name": "kodo-mcp-server",
  "version": "0.3.1",
  "description": "MCP Server for Kodo - Enables Claude to interact with projects, documents, tasks, databases, tabs, spreadsheets and more",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "inspect": "pnpm dlx @modelcontextprotocol/inspector node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@supabase/supabase-js": "^2.49.10",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-code-block-lowlight": "^3.20.0",
    "@tiptap/extension-color": "^3.20.0",
    "@tiptap/extension-font-family": "^3.20.0",
    "@tiptap/extension-highlight": "^3.20.0",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-table": "^3.20.0",
    "@tiptap/extension-table-cell": "^3.20.0",
    "@tiptap/extension-table-header": "^3.20.0",
    "@tiptap/extension-table-row": "^3.20.0",
    "@tiptap/extension-task-item": "^3.20.0",
    "@tiptap/extension-task-list": "^3.20.0",
    "@tiptap/extension-text-align": "^3.20.0",
    "@tiptap/extension-text-style": "^3.20.0",
    "@tiptap/html": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "dotenv": "^16.4.0",
    "hono": "^4.6.14",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pino-pretty": "^5.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "taskmanager",
    "claude",
    "supabase"
  ],
  "license": "MIT"
}

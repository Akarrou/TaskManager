# TaskManager MCP Server - Environment Configuration
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=http://localhost:8000
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Storage Configuration
STORAGE_BUCKET=documents-files

# HTTP Server Configuration (for Claude Web)
HTTP_PORT=3100

# Authentication (for production)
# WARNING: Set a strong password before deploying
# Set AUTH_ENABLED=false for local development without authentication
AUTH_ENABLED=true
AUTH_USERNAME=admin
AUTH_PASSWORD=

# Snapshot Configuration
# Number of days to keep automatic snapshots before cleanup
SNAPSHOT_RETENTION_DAYS=30

# Frontend app URL (for generating clickable source links in search results)
# Local development: http://localhost:4200
# Production: https://your-domain.com
APP_URL=http://localhost:4200

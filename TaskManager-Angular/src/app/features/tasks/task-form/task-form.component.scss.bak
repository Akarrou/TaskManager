@use "sass:color";
@use '../../../styles/variables' as v;

// Styles specific to the task-form layout.
// Generic form element styles (input, label, button) are now global.

.task-form-container {
  background: v.$background-color-form;
  border-radius: v.$border-radius-lg;
  box-shadow: v.$shadow-lg;
  border: 1px solid v.$border-color-light;
  overflow: hidden;
  max-width: 1200px;
  margin: 3rem auto;
  font-family: v.$font-family-sans;
}

.form-header {
  padding: 1.5rem 2rem;
  border-bottom: 1px solid transparent;
  display: flex;

  h2 {
    margin: 0;
    font-size: v.$font-size-lg;
    font-weight: 600;
    line-height: 1.4;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  h3 {
    margin: 0;
    font-size: v.$font-size-lg;
    font-weight: 600;
    line-height: 1.4;
  }
}

.task-number-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.5rem;
  font-size: v.$font-size-sm;
  font-weight: 600;
  border-radius: v.$border-radius-md;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  
  &.task-number-epic {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    border: 1px solid #991b1b;
  }
  
  &.task-number-feature {
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    border: 1px solid #1e40af;
  }
  
  &.task-number-task {
    background: linear-gradient(135deg, #059669, #047857);
    border: 1px solid #065f46;
  }
}

.task-form {
  padding: 2rem 2.5rem;
}

.form-group {
  margin-bottom: 1.75rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.75rem;

  @media (min-width: v.$breakpoint-sm) {
    grid-template-columns: 1fr 1fr;
  }
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: v.$space-4;
  padding-top: v.$space-4;
  margin-top: v.$space-4;
  border-top: 1px solid v.$border-color-light;

  &.no-border {
    border-top: none;
    padding-top: 0;
  }
}

// Styles for Comments Section
.comments-section {
  padding: 2rem 2.5rem;
  border-top: 1px solid v.$border-color-light;
  background-color: color.adjust(v.$background-color-page, $lightness: -2%);

  h4, h5 {
    font-weight: v.$font-weight-bold;
    color: v.$text-color-dark;
    margin-top: 0;
    margin-bottom: 1.5rem;
  }
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.comment-item {
  background-color: v.$background-color-form;
  border-radius: v.$border-radius-md;
  padding: 1.25rem;
  box-shadow: v.$shadow-sm;
  border: 1px solid v.$border-color-light;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.comment-author {
  font-weight: v.$font-weight-medium;
  color: v.$text-color-medium;
  font-size: v.$font-size-sm;
}

.comment-date {
  font-size: v.$font-size-sm;
  color: v.$text-color-light;
}

.comment-body {
  margin: 0;
  line-height: 1.6;
  color: v.$text-color-medium;
  white-space: pre-wrap;
}

.no-comments-message {
  padding: 1.5rem;
  text-align: center;
  color: v.$text-color-light;
  background-color: v.$background-color-page;
  border-radius: v.$border-radius-md;
  margin-bottom: 2rem;
  border: 1px dashed v.$border-color-medium;
}

.add-comment-form {
  .mat-form-field {
    width: 100%;
  }

  .form-actions {
    justify-content: flex-end;
    border-top: none;
    padding-top: 0;
    margin-top: 1rem;
  }
} 

.c-table-column--subtask-desc {
  width: 35%;
  max-width: 250px;
  white-space: normal;
  word-break: break-word;
}
.c-table-column--subtask-title {
  width: 35%;
  max-width: 250px;
  white-space: normal;
  word-break: break-word;
}


.c-tasks-container {
  padding: 0 2.5rem;
}
.task-form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}


@media (max-width: 900px) {
.save-and-back-btn {
  position: fixed;
  bottom: 140px;
  right: 100px;
  z-index: 1000;
  width: 50px;
  height: 50px;
  min-width: 50px;
  min-height: 50px;
  background: v.$primary-color;
  color: v.$text-color-inverted;
  border-radius: 50% !important;

  border: 1px solid v.$border-color-light;
  transition: all v.$transition-duration v.$transition-timing-function;
  box-shadow: v.$shadow-md;
  &:hover {
    background: v.$primary-color-dark;
    box-shadow: v.$shadow-lg;
  }
}

.back-btn {
  position: fixed;
  bottom: 140px;
  right: 170px;
  z-index: 1000;
  width: 50px;
  height: 50px;
  min-width: 50px;
  min-height: 50px;
  background: v.$error-color;
  color: v.$text-color-inverted;
  border-radius: 50% !important;

  border: 1px solid v.$border-color-light;
  transition: all v.$transition-duration v.$transition-timing-function;
  box-shadow: v.$shadow-md;
  &:hover {
    background: color.adjust(v.$error-color, $lightness: -8%);
    box-shadow: v.$shadow-lg;
  }
}
.hover-line:hover {
  background-color: #cbcbd9;
  cursor: pointer;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

// --- Harmonisation du multi-sélect Environnement (Angular Material) ---

// Cible uniquement le champ Environnement via son id ou une classe spécifique si besoin
::ng-deep .mat-form-field-appearance-outline.mat-form-field {
  border-radius: v.$border-radius-lg;
  background: v.$background-color-form;
  border: 1px solid v.$border-color-light;
  min-height: 44px;
}

::ng-deep .mat-form-field-appearance-outline .mat-form-field-outline {
  border-radius: v.$border-radius-lg;
}
::ng-deep .mat-mdc-form-field-infix {
  padding-top: 20px !important;
  padding-bottom: 20px !important;
  padding-left: 10px !important;
  padding-right: 10px !important;
  width: 300px !important;

}
::ng-deep .mdc-text-field {
  border-radius: v.$border-radius-lg !important;
  background: v.$background-color-form !important;
  border: 1px solid v.$border-color-light !important;
}
::ng-deep .mdc-text-field--outlined {
  border-radius: v.$border-radius-lg !important;
  background: v.$background-color-form !important;
  border: 1px solid v.$border-color-light !important;
}

::ng-deep .mat-select-trigger {
  min-height: 44px;
  display: flex;
  align-items: center;
  font-size: 1rem;
  padding-top: 2px;
  padding-bottom: 2px;
  background: #6b7280 !important;
}
.mat-mdc-option.mdc-list-item {
  background: v.$background-color-form !important;
}

::ng-deep .mat-select-value {
  min-height: 40px;
  display: flex;
  align-items: center;
}

// Style des chips dans le select
::ng-deep .mat-chip {
  background: v.$primary-color-light;
  color: v.$primary-color-dark;
  border-radius: 9999px;
  font-size: 0.92rem;
  font-weight: 500;
  padding: 0 10px;
  margin-right: 4px;
  margin-bottom: 2px;
  min-height: 28px;
  display: flex;
  align-items: center;
}

// Focus et hover
::ng-deep .mat-form-field-appearance-outline.mat-focused .mat-form-field-outline-thick {
  border-color: v.$primary-color;
}

// Option sélectionnée
::ng-deep .mat-option.mat-selected {
  background: v.$primary-color-light;
  color: v.$primary-color-dark;
}

input[readonly] {
  background-color: #f1f5f9;
  color: #6b7280;
  cursor: not-allowed;
}


::ng-deep .mat-horizontal-content-container {
  min-height: 40vh !important;
}

// Styles pour le stepper
::ng-deep {
  // Styles pour l'étape active
  .mat-step-header.cdk-program-focused .mat-step-text-label,
  .mat-step-header.cdk-keyboard-focused .mat-step-text-label,
  .mat-step-header[aria-selected="true"] .mat-step-text-label {
    background-color: rgba(63, 81, 181, 0.15) !important;
    color: #3f51b5 !important;
    padding: 6px 12px !important;
    border-radius: 6px !important;
    font-weight: 600 !important;
    transition: all 0.3s ease !important;
    box-shadow: 0 2px 4px rgba(63, 81, 181, 0.2) !important;
  }

  // Style pour les étapes visitées/complétées
  .mat-step-header .mat-step-icon-state-done .mat-step-text-label {
    color: #4caf50 !important;
    font-weight: 500 !important;
  }

  // Style pour les étapes en cours
  .mat-step-header .mat-step-icon-state-edit .mat-step-text-label {
    color: #3f51b5 !important;
    font-weight: 600 !important;
  }

  // Améliorer l'apparence générale du stepper
  .mat-horizontal-stepper-header {
    pointer-events: auto !important;
    transition: all 0.2s ease !important;
    border-radius: 8px !important;
    padding: 8px 12px !important;
    margin: 0 4px !important;
    
    &:hover {
      background-color: rgba(63, 81, 181, 0.05) !important;
      transform: translateY(-1px) !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
    }

    &:active {
      transform: translateY(0) !important;
    }
  }

  // Style pour rendre les étapes cliquables visuellement
  .mat-horizontal-stepper-header:not(.mat-step-disabled) {
    cursor: pointer !important;
    
    .mat-step-text-label {
      transition: all 0.2s ease !important;
    }

    &:hover .mat-step-text-label {
      color: #3f51b5 !important;
      font-weight: 500 !important;
    }
  }

  // Style pour les étapes disables
  .mat-horizontal-stepper-header.mat-step-disabled {
    cursor: not-allowed !important;
    opacity: 0.6 !important;
    
    &:hover {
      background-color: transparent !important;
      transform: none !important;
      box-shadow: none !important;
    }
  }

  // Icônes des étapes
  .mat-step-icon {
    transition: all 0.2s ease !important;
  }

  .mat-horizontal-stepper-header:hover .mat-step-icon {
    transform: scale(1.1) !important;
  }

  // Ligne de connexion entre les étapes
  .mat-stepper-horizontal-line {
    border-top-color: rgba(63, 81, 181, 0.2) !important;
  }

  // Actions des étapes
  .step-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid v.$border-color-light;
    gap: 1rem;
  }

  // Message informatif pour le mode édition
  .stepper-info {
    background-color: rgba(33, 150, 243, 0.1);
    border: 1px solid rgba(33, 150, 243, 0.3);
    border-radius: 6px;
    padding: 12px 16px;
    margin-bottom: 1rem;
    color: #1976d2;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 8px;

    mat-icon {
      font-size: 18px;
      width: 18px;
      height: 18px;
    }
  }
}